#!/usr/bin/env lua
require "luarocks.loader"

local Shell = require('minilib.shell')
local Util = require('minilib.util')

return {
	configure = function()
		Shell.mkdir ("~/.config/nvim")
		Shell.ln ("$(pwd)/nvim/my/init.vim","~/.config/nvim/init.vim")
	end,
	dependsOn = function()
		Shell.file_exists ("nvim")
	end,
	installer = function()
	end
}
